    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.12</version>
                <configuration>
                    <!-- 
                        all those tests have to be excluded because they require a connection to a postgres db or the
                        remote test helper service, respectively. as this service is only internally available we have
                        to think of another method to test these things
                     -->
                    <excludes>
                        <exclude>**/CalcTest.class</exclude>
                        <exclude>**/CompleteCalcTestReport.class</exclude>
                        <exclude>**/EntwicklungsImport.class</exclude>
                    </excludes>
                </configuration>
           </plugin>
            <plugin>
                <groupId>de.cismet.cids</groupId>
                <artifactId>cids-maven-plugin</artifactId>
                <version>2.0-preview-1</version>
                <executions>
                    <execution>
                        <id>create-compile-classpath</id>
                        <goals>
                            <goal>create-direct-cp-property</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.0</version>
                <executions>
                    <execution>
                        <id>default-compile</id>
                        <phase>none</phase>
                    </execution>
                    <execution>
                        <id>direct-compile</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>compile</goal>
                        </goals>
                        <configuration>
                            <compilerArguments>
                                <sourcepath>${basedir}/src/main/java</sourcepath>
                                <classpath>${classpath.directDependencies}</classpath>
                            </compilerArguments>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
    
